{
	"name": "tatter/library",
	"description": "for CodeIgniter 4",
	"keywords": [
		"codeigniter",
		"codeigniter4"
	],
	"homepage": "https://github.com/tattersoftware/codeigniter4-library",
	"license": "MIT",
	"authors": [
		{
			"name": "Matthew Gatner",
			"email": "mgatner@tattersoftware.com",
			"homepage": "https://tattersoftware.com",
			"role": "Developer"
		}
	],
	"repositories": [
		{
			"type": "vcs",
			"url": "https://github.com/codeigniter4/CodeIgniter4"
		}
	],
	"minimum-stability": "dev",
	"prefer-stable": true,
	"require": {
		"php" : "^7.3|^8.0"
	},
	"require-dev": {
		"codeigniter4/codeigniter4": "dev-develop",
		"tatter/tools": "^1.3"
	},
	"config": {
		"optimize-autoloader": true,
		"preferred-install": "dist",
		"sort-packages": true
	},
	"autoload": {
		"psr-4": {
			"Tatter\\Library\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\Support\\": "tests/_support"
		}
	},
	"scripts": {
		"analyze": "phpstan analyze",
		"style": "phpcbf --standard=./vendor/codeigniter4/codeigniter4-standard/CodeIgniter4 src/ tests/",
		"test": "phpunit"
	}
}
